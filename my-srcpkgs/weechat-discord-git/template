# Template file for 'weechat-discord-git'
_my_field_repo=git://github.com/terminal-discord/weechat-discord.git
archs=noarch
build_style=cargo
conflicts=weechat-discord
depends="weechat"
homepage="https://github.com/terminal-discord/weechat-discord"
hostmakedepends="git"
license="MIT"
maintainer="Orphaned <orphan@voidlinux.org>"
makedepends="weechat-devel-git clang"
pkgname=weechat-discord-git
provides=weechat-discord-0_1
revision=1
short_desc="Weechat plugin for Discord support"
version=e09bac6

weechat-discord-git_package() {
    true
}

do_fetch() {
    git clone $_my_field_repo ${pkgname}-${version}
}

post_install() {
    vinstall target/${RUST_TARGET}/release/libweecord.so 644 usr/lib/weechat/plugins/
    vlicense LICENSE
}
