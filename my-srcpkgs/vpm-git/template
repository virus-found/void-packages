conflicts=vpm
homepage="https://github.com/netzverweigerer/vpm"
hostmakedepends="git"
license="GPL-3"
maintainer="Orphaned <orphan@voidlinux.org>"
my_field_repo=git://github.com/netzverweigerer/vpm
pkgname=vpm-git
provides=vpm-0_1
revision=1
short_desc="An XBPS package management helper for VoidLinux"
version=3c729dd

vpm-git_package() {
    true
}

do_fetch() {
    git clone $my_field_repo ${pkgname}-${version}
}

do_install() {
    vbin vpm
}
