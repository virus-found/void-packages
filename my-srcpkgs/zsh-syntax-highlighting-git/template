# Template file for 'zsh-syntax-highlighting'
_my_field_repo=git://github.com/zsh-users/zsh-syntax-highlighting.git
pkgname=zsh-syntax-highlighting-git
conflicts="zsh-syntax-highlighting>=0"
replaces="zsh-syntax-highlighting>=0"
version=91d2eea
revision=1
archs=noarch
#depends="zsh"
hostmakedepends="git"
short_desc="Fish shell like syntax highlighting for Zsh"
maintainer="Eivind Uggedal <eivind@uggedal.com>"
license="BSD-3-Clause"
homepage="https://github.com/zsh-users/zsh-syntax-highlighting"

do_install() {
	vinstall ${pkgname%-git}.zsh 644 usr/share/zsh/plugins/${pkgname%-git}
	vinstall .version 644 usr/share/zsh/plugins/${pkgname%-git}
	vinstall .revision-hash 644 usr/share/zsh/plugins/${pkgname%-git}
	vcopy highlighters usr/share/zsh/plugins/${pkgname%-git}
	vlicense COPYING.md
}
