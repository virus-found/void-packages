# Template file for 'rainbarf-git'
_my_field_repo=git://github.com/creaktive/rainbarf.git
conflicts=rainbarf
depends="perl"
homepage="http://freecode.com/projects/rainbarf"
hostmakedepends="git"
license="GPL"
maintainer="Orphaned <orphan@voidlinux.org>"
pkgname=rainbarf-git
provides=rainbarf-0_1
revision=1
short_desc="CPU/RAM stats chart for tmux & screen"
version=631c93f

rainbarf-git_package() {
    true
}

do_fetch() {
    git clone $_my_field_repo ${pkgname}-${version}
}

do_install() {
    vbin rainbarf
}
