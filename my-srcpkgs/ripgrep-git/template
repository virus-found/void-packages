post_install() {
	vlicense LICENSE-MIT
	vlicense UNLICENSE

	vinstall complete/_rg 0644 usr/share/zsh/site-functions
	cd target/${RUST_TARGET}/release/build/ripgrep-*/out
	vman rg.1
	vinstall rg.bash 0644 usr/share/bash-completion/completions rg
}
